<li class=".user-view-wrapper">
    <div class="user-view">
        <div class="background">
            <img src="/images/bg.jpg">
        </div>
        <img class="image circle" src={{user.image}}>
        <div class="name">{{user.displayName}}</div>
        <div class="email">{{user.email}}</div>
    </div>
</li>

<div class="scrollable">

<li class="important disabled padded-item">
    <a class="" href="https:textto.io/donate" target="_blank">
        <i class="material-icons">favorite</i>
        Donate!
    </a>
</li>
<div class="divider"></div>

{{#if web}}
    <li class="disabled padded-item">
        <a class="color-text-primary" href="https:textto.io/downloads">
            <i class="material-icons color-text-primary">get_app</i>
            Download the Desktop App
        </a>
    </li>
{{/if}}

<li class="padded-item">
    <a class="waves-effect color-text-primary" {{action 'openThemes'}}>
        <i class="material-icons color-text-primary">invert_colors</i>
        Themes
    </a>
</li>

<li class="padded-item">
    <a class="waves-effect color-text-primary" {{action 'manageDevices'}}>
        <i class="material-icons color-text-primary">phone_android</i>
        Manage Devices
    </a>
</li>

<li class="padded-item">
    <a class="waves-effect color-text-primary" {{action 'syncContacts'}}>
        <i class="material-icons color-text-primary">person</i>
        Sync Contacts
        {{#if syncingContacts}}
            {{loading-view class="contact-loader"}}
        {{/if}}
    </a>
</li>

<li class="padded-item">
    <a class="color-text-primary">
        {{setting-item
            type='switch'
            icon='notifications'
            displayName='Notifications'
            default=true
            setting='notifications'}}
    </a>
</li>

<li class="padded-item">
    <a class="waves-effect color-text-primary" {{action 'transitionToPath' 'settings'}}>
        <i class="material-icons color-text-primary">settings</i>
        Settings
    </a>
</li>

<div class="divider"></div>

<li class="padded-item">
    <a class="waves-effect color-text-primary" href="mailto:help@textto.io">
        <i class="material-icons">email</i>
        Contact Support
    </a>
</li>
<li class="padded-item">
    <a class="waves-effect color-text-primary" target="_blank" href="https://textto.io/faq">
        <i class="material-icons">help</i>
        FAQ
    </a>
</li>
</div>

<li class="logout padded-item">
    <a class="waves-effect" {{action 'logOut'}}>
        <i class="material-icons">power_settings_new</i>
        Log Out
    </a>
</li>
