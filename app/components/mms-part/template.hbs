{{#if isPlainText}}
    <message-bubble>
        {{emoji-text content=part.data}}
        {{#if sender}}
            <sender>
                {{sender}}
            </sender>
        {{/if}}
    </message-bubble>
{{else if isImage}}
    <img class="mms-image" src={{part.data}} {{action 'openImage'}}>
    {{#if sender}}
        <sender>
            {{sender}}
        </sender>
    {{/if}}
{{/if}}