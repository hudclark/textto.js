{{#if isPlainText}}
    <message-bubble>
        {{emoji-text content=part.data linkify=true}}
        {{#if sender}}
            <sender>
                {{sender}}
            </sender>
        {{/if}}
    </message-bubble>
{{else if isImage}}
    {{mms-image part=part}}
    {{#if sender}}
        <sender>
            {{sender}}
        </sender>
    {{/if}}
{{/if}}