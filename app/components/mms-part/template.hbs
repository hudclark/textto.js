{{#if isPlainText}}
    <message-bubble>
        {{emoji-text content=part.data linkify=true}}
        {{#unless isScheduled}}
            {{link-preview text=part.data}}
        {{/unless}}
        {{#if sender}}
            <sender class="color-text-primary">
                {{sender}}
            </sender>
        {{/if}}
    </message-bubble>
{{else if isImage}}
    {{mms-image part=part}}
    {{#if sender}}
        <sender>
            {{sender}}
        </sender>
    {{/if}}
{{/if}}