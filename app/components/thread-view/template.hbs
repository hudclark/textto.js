<div class="details">
    <div class="name">
        {{emoji-text content=(recipient-list contacts=thread.contacts addresses=thread.addresses)}}
    </div>
    <div class="snippet">
        {{emoji-text content=thread.snippet}}
    </div>
</div>
<i class="material-icons cancel">close</i>